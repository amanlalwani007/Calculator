<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn9"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btn8"
        android:text="9" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/btn7"
        android:layout_toStartOf="@+id/btn7"
        android:text="8" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/btndivide"
        android:layout_toStartOf="@+id/btndivide"
        android:text="7" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn9"
        android:text="6" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/btn8"
        android:layout_below="@+id/btn8"
        android:text="5" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/btn7"
        android:layout_below="@+id/btn7"
        android:text="4" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn6"
        android:text="3" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/btn8"
        android:layout_below="@+id/btn5"
        android:text="2" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/btn7"
        android:layout_below="@+id/btn4"
        android:text="1" />

    <Button
        android:id="@+id/btnclear"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn3"
        android:text="clear" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/btn8"
        android:layout_below="@+id/btn2"
        android:text="0" />

    <Button
        android:id="@+id/btnequal"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/btn7"
        android:layout_below="@+id/btn1"
        android:text="=" />

    <Button
        android:id="@+id/btndivide"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_above="@+id/btnmul"
        android:layout_alignParentEnd="true"
        android:text="/" />

    <Button
        android:id="@+id/btnmul"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_above="@+id/btnadd"
        android:layout_alignParentEnd="true"
        android:text="*" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_above="@+id/btnsub"
        android:layout_alignParentEnd="true"
        android:text="+" />

    <Button
        android:id="@+id/btnsub"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="-" />

    <TextView
        android:id="@+id/tvcontrol"
        android:layout_width="match_parent"
        android:layout_height="161dp"
        android:layout_above="@+id/btndivide"
        android:layout_alignParentEnd="true"
        android:textSize="36sp"
        app:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/tvresult"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:layout_above="@+id/tvcontrol"
        android:layout_alignParentEnd="true"
        android:textSize="36sp"
        app:fontFamily="cursive" />
</RelativeLayout>